              %img.texture.img-thumbnail.img-responsive{ src: 'img/pattern/sq/natfl013.jpg' }
          .col-xs-4.col-sm-3.col-md-2.col-lg-2
            %a{ href: '#', data-texture: 'img/pattern/natfl049.jpg' }
